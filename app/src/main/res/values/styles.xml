<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red_F44336</item>
    </style>

    <!--TYPOGRAPH-->
    <style name="Headline">
        <item name="android:fontFamily">@font/firasans_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="SubHeadline">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/firasans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="BoldSubHeadline" parent="SubHeadline">
        <item name="android:fontFamily">@font/firasans_bold</item>
    </style>

    <style name="Label">
        <item name="android:fontFamily">@font/firasans_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="Large">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="LargePassword">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/smoke_E0E0E0</item>
    </style>

    <style name="Medium">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Small">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="Micro">
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="Widget.Theme.ContainerTracker.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.ContainerTracker.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!--  Theme  -->
    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonTheme.Vanilla">
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ButtonTheme.Vanilla.SolidPrimary">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/selector_text_button</item>
    </style>
</resources>